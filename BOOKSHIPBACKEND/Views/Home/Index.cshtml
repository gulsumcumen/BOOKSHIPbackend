@{
    Layout = null;
    ViewData["Title"] = "Home Page";
}
<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Montserrat', sans-serif;
    background-image: url("Images/librarybackground.jpg/");
    background-size: cover;
    background-position: center;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    color: rgb(161, 158, 158);
    overflow: hidden;
}

.overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    display: flex;
    justify-content: center;
    align-items: center;
}

.logo {
    position: absolute;
    top: 70px;
    left: 30px;
    font-size: 24px;
    font-weight: bold;
    color: white;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
}
.logo2 {
    font-family: 'Playfair Display', serif;
    font-size: 14px;
    font-weight: 700;
    margin-bottom: 10px;
    color: #e7e7e7;
    text-shadow: 3px 3px 8px rgba(0, 0, 0, 0.7);
}

.container {
    text-align: center;
    padding: 40px;
    border-radius: 15px;
    background-color: none;
    box-shadow: none;
    max-width: 800px;
}



h1 {
    font-family: 'Playfair Display', serif;
    font-size: 72px;
    font-weight: 700;
    margin-bottom: 10px;
    color: #e7e7e7;
    text-shadow: 3px 3px 8px rgba(0, 0, 0, 0.7);
}

.subtitle {
    font-size: 28px;
    margin-bottom: 40px;
    color: #f0f0f0;
    text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.5);
}

.buttons {
    display: flex;
    justify-content: center;
    gap: 30px;
}

button {
    padding: 15px 30px;
    font-size: 18px;
    font-weight: bold;
    border-radius: 30px;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 8px 15px burlywood;
}

.btn-primary {
    background-color: beige;
    color: brown;
}

.btn-primary:hover {
    background-color: bisque;
    transform: translateY(-3px);
    box-shadow: 0 12px 25px brown;
}

.btn-secondary {
    background-color: beige;
    color: brown;
}

.btn-secondary:hover {
    background-color: bisque;
    transform: translateY(-3px);
    box-shadow: 0 12px 25px brown
}
</style>
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookship</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Montserrat:wght@400&display=swap" rel="stylesheet"> <!-- Font eklemesi -->
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="overlay">
        <div class="logo">BookshipCo.</div>
        <div class="container">
            <h1>BOOKSHIP</h1>
            <div class="subtitle">Yeni nesil kitap forumu</div>
            <p class="subtitle">Derinlere dalmaya hazır mısın?</p>
            <div class="buttons">
                <button class="btn-primary" aria-disabled="true" onclick="window.location.href='@Url.Action("Index","Bookship")'">Ben bu geminin yolcusuyum.</button>
                <button class="btn-secondary" aria-disabled="true" onclick="window.location.href='@Url.Action("SignUp", "Bookship")'">Yüzmeyi bilmiyorum.</button>
            </div>
        </div>
    </div>
</body>
</html>
