                <label for="pwd">Şifre:</label>
                <input type="password" class="form-control" id="pwd" placeholder="Şifrenizi giriniz." name="pswd">
            </div>
            <div class="form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="remember"> Beni hatırla
                </label>
            </div>
            <button type="button" class="btn btn-outline-secondary">Giriş Yap</button>
        </form>
    </div>
</body>

</html>
